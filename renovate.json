{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Chart.yaml$"
      ],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "appVersion: \"(?<currentValue>v[a-z0-9.-]+)\"",
        "      image: \"(?<depName>[a-z/-]+):(?<currentValue>[a-z0-9.-]+)\""
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
